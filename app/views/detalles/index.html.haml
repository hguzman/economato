%h1 Listing detalles

%table
  %thead
    %tr
      %th Producto
      %th Cantidad
      %th Consolidado
      %th
      %th
      %th

  %tbody
    - @detalles.each do |detalle|
      %tr
        %td= detalle.producto
        %td= detalle.cantidad
        %td= detalle.consolidado
        %td= link_to 'Show', detalle
        %td= link_to 'Edit', edit_detalle_path(detalle)
        %td= link_to 'Destroy', detalle, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Detalle', new_detalle_path
