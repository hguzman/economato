%h1= "Lista #{Teacher.model_name.human(count: 2)}"


%table.footable.table.table-striped.toggle-arrow-tiny
  %thead
    %tr
      %th Nombre
      %th Contrato
      %th Celular
      %th{colspan: "3"} Acciones

  %tbody
    - @teachers.each do |teacher|
      %tr
        %td= teacher.nombre
        %td= teacher.contrato
        %td= teacher.celular
        %td= link_to 'Ver', teacher
        %td= link_to 'Editar', edit_teacher_path(teacher)
        %td= link_to 'Borrar', teacher, method: :delete, data: { confirm: 'Â¿Esta seguro?' }

%br

= link_to 'Nuevo Instructor', new_teacher_path

- content_for :scripts do
  :javascript
    $(function() {
      $('.footable').footable();
    });
