%h1= "Lista #{Ficha.model_name.human(count: 2)}"


%table.footable.table.table-striped.toggle-arrow-tiny
  %thead
    %tr
      %th Ficha
      %th Programa
      %th Fecha inicio
      %th Fecha fin
      %th{colspan: "3"} Acciones

  %tbody
    - @fichas.each do |ficha|
      %tr
        %td= ficha.ficha
        %td= ficha.program.nombre
        %td= l ficha.fecha_inicio_at, format: :long
        %td= l ficha.fecha_fin_at, format: :long
        %td= link_to 'Ver', ficha
        %td= link_to 'Editar', edit_ficha_path(ficha)
        %td= link_to 'Borrar', ficha, method: :delete, data: { confirm: 'Â¿Esta seguro?' }

%br

= link_to 'Nueva Ficha', new_ficha_path

- content_for :scripts do
  :javascript
    $(function() {
      $('.footable').footable();
    });
