%h1= "Lista #{Activity.model_name.human(count: 2)}"

%table.footable.table.table-striped.toggle-arrow-tiny
  %thead
    %tr
      %th Nombre
      %th Description
      %th{colspan: "3"} Acciones

  %tbody
    - @activities.each do |activity|
      %tr
        %td= activity.nombre
        %td= activity.description
        %td= link_to 'Show', activity
        %td= link_to 'Edit', edit_activity_path(activity)
        %td= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Â¿Esta seguro?' }

%br

= link_to 'Nueva Actividad', new_activity_path

- content_for :scripts do
  :javascript
    $(function() {
      $('.footable').footable();
    });
