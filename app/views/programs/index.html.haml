%h1= "Lista #{Program.model_name.human(count: 2)}"

%table.footable.table.table-striped.toggle-arrow-tiny
  %thead
    %tr

      %th Codigo
      %th Nombre
      %th Fichas
      %th{colspan: "3"} Acciones

  %tbody
    - @programs.each do |program|
      %tr
        %td= program.codigo
        %td= program.nombre
        %td= program.fichas.count
        %td= link_to 'Ver', program
        %td= link_to 'Editar', edit_program_path(program)
        %td= link_to 'Borrar', program, method: :delete, data: { confirm: 'Â¿Esta seguro?' }

%br

= link_to 'Nuevo Programa', new_program_path

- content_for :scripts do
  :javascript
    $(function() {
      $('.footable').footable();
    });
